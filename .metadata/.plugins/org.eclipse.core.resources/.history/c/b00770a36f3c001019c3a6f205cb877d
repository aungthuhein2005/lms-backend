package com.lms.backend.controller;

import java.util.List;
import java.util.Optional;

import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.lms.backend.entity.Exam;
import com.lms.backend.service.ExamService;

@CrossOrigin(origins="http://localhost:3000")
@RestController
@RequestMapping("/exams")
public class ExamController {

	private ExamService examService;
	
	 public ExamController(ExamService examService) {
	        this.examService = examService;
	    }
	
	@GetMapping("/all")
	public List<Exam> getAll(){
		return examService.getAllExams();
	}
	
	@GetMapping("/{id}")
	public Optional<Exam> getexamById(@PathVariable Integer id) {
		return examService.getExamById(id);
	}
	
	@PostMapping("/create")
	public Exam createExam(@RequestBody Exam exam) {
		return examService.createExam(exam);
	}
	
	@PutMapping("/update/{id}")
	public Exam updateExam(@PathVariable Integer id, @RequestBody Exam exam) {
		return examService.updateExam(id, exam);		
	}
	
	@DeleteMapping("/{id}")
	public void deleteExam(@PathVariable Integer id) {
		examService.deleteExam(id);
	}
}

